{
  "name": "ledger-wallet-desktop",
  "description": "Ledger Wallet Desktop",
  "version": "0.0.0",
  "author": "Ledger",
  "license": "BSD-2-Clause",
  "build": {
    "appId": "com.electron.ledger",
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "scripts": {
    "start": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "prettier": "prettier --write \"src/**/*.js\"",
    "postinstall": "electron-rebuild && flow-typed install -s",
    "flow": "flow",
    "lint": "eslint src"
  },
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "webpack.renderer.js"
    }
  },
  "dependencies": {
    "@ledgerhq/hw-btc": "^1.0.4",
    "@ledgerhq/hw-comm": "^1.0.4",
    "@ledgerhq/hw-comm-node-hid": "^1.0.4",
    "@ledgerhq/hw-eth": "^1.0.4",
    "color": "^2.0.1",
    "electron": "1.7.10",
    "electron-devtools-installer": "^2.2.3",
    "file-loader": "^1.1.6",
    "history": "^4.7.2",
    "i18next": "^10.2.2",
    "i18next-node-fs-backend": "^1.0.0",
    "object-path": "^0.11.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-i18next": "^7.3.1",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "5.0.0-alpha.9",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-thunk": "^2.2.0",
    "source-map-support": "^0.5.0",
    "styled-components": "^2.2.4",
    "styled-system": "^1.1.1",
    "webpack": "^3.10.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "electron-builder": "^19.49.0",
    "electron-rebuild": "^1.6.1",
    "electron-webpack": "1.11.0",
    "eslint": "^4.13.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "flow-bin": "^0.63.1",
    "flow-typed": "^2.2.3",
    "prettier": "^1.10.2",
    "react-hot-loader": "^4.0.0-beta.12"
  }
}
